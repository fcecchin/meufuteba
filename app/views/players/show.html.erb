<%- model_class = Player -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:deleted_at) %></dt>
      <dd><pre class="prettyprint"><%= @player.deleted_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:team_id) %></dt>
      <dd><pre class="prettyprint"><%= @player.team_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user_id) %></dt>
      <dd><pre class="prettyprint"><%= @player.user_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @player.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:position) %></dt>
      <dd><pre class="prettyprint"><%= @player.position %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:number) %></dt>
      <dd><pre class="prettyprint"><%= @player.number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:retired) %></dt>
      <dd><pre class="prettyprint"><%= @player.retired %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:injured) %></dt>
      <dd><pre class="prettyprint"><%= @player.injured %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:born_on) %></dt>
      <dd><pre class="prettyprint"><%= @player.born_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notes) %></dt>
      <dd><pre class="prettyprint"><%= @player.notes %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              players_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_player_path(@player), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              player_path(@player),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>