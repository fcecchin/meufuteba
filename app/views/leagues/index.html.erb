<%- model_class = League -%>
  <% provide(:title, 'My leagues') %>
<%= render partial: 'layouts/pageheader', locals: {breadcrumbs: {'Leagues' => nil}} %>

<div class="row-btn">
  <%= link_to "<span class='glyphicon glyphicon-plus'></span> ".html_safe + t('league.new_league', :default => t("helpers.links.new")), new_league_path, :class => 'btn btn-primary pull-right' %>
</div>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= t('league.president') %></th>
      <th><%= t('league.number_of_teams') %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= link_to league.name, league_path(league) %></td>
        <td><%= league.user.full_name %></td>
        <td><%= league.teams.count %></td>
        <td><%=l league.created_at, format: :long %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
