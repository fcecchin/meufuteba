<% provide(:title, @league.custom_name) %>
<%- model_class = League -%>

<%= render partial: 'layouts/pageheader', locals: {subtitle: 'League Details', breadcrumbs: {'Leagues' => leagues_path, @league.name => nil}} %>

<div class="container">
<div class="row">
  <div class="col-xs-5 col-sm-5">
    <div class="row">
        <div class="col-xs-12 col-sm-4" style='font-weight: bold;'><%=t('.manager') %></div>
        <div class="col-xs-12 col-sm-8" style='text-transform: capitalize'><%= link_to @league.user.full_name, edit_user_registration_path(@league.user_id) %></div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-4" style='font-weight: bold;'><%=t('.name') %></div>
        <div class="col-xs-12 col-sm-8" style='text-transform: capitalize'><%= @league.name %></div>
    </div>
    <hr/>
  </div>
  
  <div class="col-xs-12 col-sm-7">
    Coloque aqui uma tabela com os times cadastrados
  </div>
</div>
  </div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              leagues_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_league_path(@league), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              league_path(@league),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>