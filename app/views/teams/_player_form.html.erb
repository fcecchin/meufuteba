<div class="row">
  <div class="col-sm-1"><h4>Nr.</h4></div>
  <div class="col-sm-2"><h4>Role</h4></div>
  <div class="col-sm-4"><h4>Player name</h4></div>
  <div class="col-sm-4"><h4>Connected users</h4></div>
  <div class="col-sm-1"><h4>Retirar</h4></div>
</div>
<%= simple_form_for @team do |f| %>
  <%= f.simple_fields_for :players do |p| %>
  <%= render "player_fields", f: p %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'Add player', f, :players, class:'btn btn-default' %>
  </div>
  <hr>
  <div class="form-group">
    <%= f.button :submit, :class => 'btn btn-primary', :disable_with => 'Please wait ...', :value => 'Save and publish' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), teams_path, :class => 'btn ' %>
  </div>
<% end %>