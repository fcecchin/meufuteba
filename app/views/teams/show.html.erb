<%- model_class = Team -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:league_id) %></dt>
      <dd><pre class="prettyprint"><%= @team.league_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @team.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:logo_url) %></dt>
      <dd><pre class="prettyprint"><%= @team.logo_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:manager) %></dt>
      <dd><pre class="prettyprint"><%= @team.manager %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ballpark) %></dt>
      <dd><pre class="prettyprint"><%= @team.ballpark %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mascot) %></dt>
      <dd><pre class="prettyprint"><%= @team.mascot %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:founded) %></dt>
      <dd><pre class="prettyprint"><%= @team.founded %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wins) %></dt>
      <dd><pre class="prettyprint"><%= @team.wins %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:losses) %></dt>
      <dd><pre class="prettyprint"><%= @team.losses %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:win_percentage) %></dt>
      <dd><pre class="prettyprint"><%= @team.win_percentage %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              teams_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_team_path(@team), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              team_path(@team),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>