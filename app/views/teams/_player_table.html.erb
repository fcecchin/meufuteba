<%- model_class = Team -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Connect users</th>
    </tr>
  </thead>
  <tbody>
    <% players.each do |p| %>
      <tr>
        <td><%= p.number %></td>
        <td><%= p.position %></td>
        <td><%= link_to p.name, player_path(p) %></td>
        <td><%= p.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>